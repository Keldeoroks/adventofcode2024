locList = input()
locPair = locList.split(" ")
locPair = [element for element in locPair if element] 
light = []
conflict = []
for i, n in enumerate(locPair):
    if i % 2 == 0:
        light.append(n)
    elif i % 2 == 1: 
        conflict.append(n)
sortZip = zip(sorted(light),sorted(conflict))
zipList = list(sortZip)
diff = []
for a, b in zipList:
    diff.append(abs(int(b)-int(a)))
print(sum(diff))

prod = []
for c in light:
    prod.append(conflict.count(c)*int(c))
print(sum(prod))
